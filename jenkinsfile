pipeline
{
	agent any
	stages
	{
		stage('Checkout')
		{
			steps
			{
				git 'https://github.com/jsachdev07/stratacent.git'
			}
		}
		
		stage('Compile')
		{
			steps
			{
				sh 'mvn compile'
			}
		}

		stage('Test')
		{
			steps
			{
				sh 'mvn test'
			}
		}

		stage('Build')
		{
			steps
			{
				sh 'mvn package'
			}
		}

		stage('Create server using terraform')
		{
			steps
			{
				sh 'terraform init'
				sh 'terraform plan'
				sh 'terraform apply --auto-approve'
			}
		}

		stage('create ansible inventory')
		{
			steps
			{
				sh './inv.sh'
			}
		}
		stage('Execute ansible playbook to install tomcat and run the application')
		{
			steps
			{
				sh 'ansible-playbook -i /var/lib/jenkins/inventory  tomcat.yaml'
			}
		}

     }
}
